{
  "compilerOptions": {
    "baseUrl": ".", // Базовый URL для поиска модулей
    "paths": {
      "tests/*": ["./tests/*"], // Импорты из "tests/" будут разрешаться из папки "./tests/"
      "page/*": ["./page/*"],
      "utils/*": ["./utils/*"],
    },
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strictFunctionTypes": true
  },
  "include": [
    "tests/**/*.ts",
    "utils/**/*.ts",
    "page/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright.config.ts"
  ],
}